<UserControl x:Class="JanHafner.Smartbar.Common.UserInterface.Controls.InfoIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" Width="16" Height="16" ToolTipService.InitialShowDelay="100">
    <iconPacks:PackIconModern Width="{Binding Width, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}" Height="{Binding Height, RelativeSource={RelativeSource FindAncestor, AncestorType=UserControl}}" Kind="InformationCircle" Foreground="{DynamicResource AccentColorBrush}" />
</UserControl>
